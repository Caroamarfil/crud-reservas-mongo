extends layout

block content
  h1.mb-4 Available Tables
  form.mb-4(action="/tables", method="GET")
    .row
      .col-md-3
        label.form-label(for="date") Date
        input#date.form-control(type="date", name="date", required)
      .col-md-3
        label.form-label(for="time") Time
        input#time.form-control(type="time", name="time", required)
      .col-md-3
        label.form-label(for="party_size") Party Size
        input#party_size.form-control(type="number", name="party_size", required, min="1")
      .col-md-3
        button.btn.btn-primary.mt-4(type="submit") Search Tables

  if tables && tables.length > 0
    .row
      each table in tables
        .col-md-4.mb-3
          .card
            .card-body
              h5.card-title Table #{table.table_number}
              p.card-text Capacity: #{table.capacity}
              a.btn.btn-success(href=`/reservations/create?table_id=${table._id}`) Reserve
  else
    p No available tables found for the selected criteria.